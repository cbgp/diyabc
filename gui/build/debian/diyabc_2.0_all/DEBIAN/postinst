#!/bin/bash
#if [ -f /usr/bin/update-menus ]; then
#    update-menus
#fi
set -e
if [ "$1" = "configure" ] && [ -x "`which update-menus 2>/dev/null`" ]; then
    update-menus
fi
echo DIYABC installed

chown -R 0:0 /usr/local/bin/diyabc /usr/local/src/diyabc /usr/share/applications/diyabc.desktop /usr/share/menu/diyabc
